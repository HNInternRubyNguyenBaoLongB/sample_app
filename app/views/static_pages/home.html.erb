<div class="center jumbotron">
  <h1 class = "text-center"> <%= t(".welcome") %> </h1>
  <h2 class = "text-center"> <%= t(".page_for") %>
    <%= link_to t(".ruby_tut"), Settings.home.tutorial_rails %> <%= t ".sample_app" %></h2>
    <%= link_to t(".sign_up"), signup_path , class: "btn btn-lg btn-primary" %>
</div>
<% if logged_in? %>
  <div class="row">
    <div class="col-md-3"></div>
    <aside class="col-md-3">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-6">
      <h3><%= t ".microposts" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% end %>
